{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.ts",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["server/**"],
        "tscOptions": {
          "sourceMap": false
        },
        "generateStaticRoutes": true,
        "postcss": {
          "plugins": {
            "postcss-import": {},
            "postcss-url": {},
            "autoprefixer": {}
          }
        }
      }
    }
  ],
  "build": {
    "env": {
      "NITRO_PRESET": "vercel",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  }
}
